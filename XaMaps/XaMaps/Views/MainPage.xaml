<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:local="clr-namespace:XaMaps.Views"
                  xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
                  xmlns:viewModels="clr-namespace:XaMaps.ViewModels;assembly=XaMaps"
                  MasterBehavior="Popover"
                  x:Class="XaMaps.Views.MainPage">

    <MasterDetailPage.Master>
        <local:SearchPaneView>
            <local:SearchPaneView.BindingContext>
                <viewModels:SearchPaneViewModel/>
            </local:SearchPaneView.BindingContext>
        </local:SearchPaneView>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:MapView>
                    <local:MapView.BindingContext>
                        <viewModels:MapViewModel/>
                    </local:MapView.BindingContext>
                </local:MapView>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>

</MasterDetailPage>